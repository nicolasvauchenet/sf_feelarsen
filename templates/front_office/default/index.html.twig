{% extends 'front_office/_layout/_index.html.twig' %}

{% block title %}Atomic Cowboy Tour 2024{% endblock %}
{% block meta_description %}La tourn√©e Atomic Cowboy Tour 2024{% endblock %}

{% block body_class %}front-office home{% endblock %}

{% block main %}
    <section class="app-section cover">
        <img src="{{ asset('uploads/calendar/' ~ calendar.slug ~ '/' ~ calendar.poster) }}"
             alt="{{ app_settingsService.settings.siteName }}"/>
        <div class="content">
            <h1>{{ app_settingsService.settings.siteName }} : {{ app_settingsService.settings.siteSlogan }}</h1>
        </div>
    </section>

    {{ component('FilterEvents', {calendar: calendar, calendarId: calendar.id}) }}

    {% if calendars | length > 0 %}
        <p class="alldates">
            <a href="{{ path('app_front_office_calendar') }}" class="app-button cta">Les dates d'avant</a>
        </p>
    {% endif %}
{% endblock %}
