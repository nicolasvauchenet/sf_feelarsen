{% extends 'front_office/_layout/_index.html.twig' %}

{% block title %}Les anciennes Dates{% endblock %}
{% block meta_description %}Les anciennes dates de Féelarsen{% endblock %}

{% block body_class %}front-office calendar{% endblock %}

{% block main %}
    <section class="app-section cover">
        <img src="{{ asset('uploads/settings/sitecover.jpg') }}"
             alt="{{ app_settingsService.settings.siteName }}"/>
        <div class="content">
            <h1>{{ app_settingsService.settings.siteName }} : Les Dates Passées</h1>
        </div>
    </section>

    {% if calendars | length > 0 %}
        {% for calendar in calendars %}
            {{ component('FilterEvents', {calendar: calendar, calendarId: calendar.id}) }}
        {% endfor %}
    {% endif %}

    <p class="alldates">
        <a href="{{ path('app_front_office_home') }}" class="app-button cta">Retour au Calendrier</a>
    </p>
{% endblock %}
