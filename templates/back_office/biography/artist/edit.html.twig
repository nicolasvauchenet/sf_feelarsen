{% extends 'back_office/_layout/_index.html.twig' %}

{% block title %}Modifier un Artiste{% endblock %}

{% block body_class %}back-office{% endblock %}

{% block main %}
    <section class="app-section cover">
        {% if artist.photo %}
            <img src="{{ asset('uploads/artist/' ~ artist.photo) }}"
                 alt="{{ artist.name }}"/>
        {% else %}
            <img src="{{ asset('img/artist_default.png') }}"
                 alt="{{ artist.name }}"/>
        {% endif %}
        <div class="content">
            <h1>{{ app_settingsService.settings.siteName }} : Modifier un Artiste</h1>
        </div>
    </section>

    <section class="app-section">
        {% include 'back_office/biography/artist/_form.html.twig' %}
    </section>
{% endblock %}
