{% extends 'back_office/_layout/_index.html.twig' %}

{% block title %}Modifier une Date{% endblock %}

{% block body_class %}back-office{% endblock %}

{% block main %}
    <section class="app-section cover">
        {% if event.poster %}
            <img src="{{ asset('uploads/calendar/' ~ event.calendar.slug ~ '/' ~ event.poster) }}"
                 alt="{{ event.name }}"/>
        {% elseif event.calendar.poster %}
            <img src="{{ asset('uploads/calendar/' ~ event.calendar.slug ~ '/' ~ event.calendar.poster) }}"
                 alt="{{ event.name }}"/> %}
        {% else %}
            <img src="{{ asset('uploads/settings/sitecover.jpg') }}"
                 alt="{{ event.name }}"/>
        {% endif %}
        <div class="content">
            <h1>{{ app_settingsService.settings.siteName }} : Modifier une Date</h1>
        </div>
    </section>

    <section class="app-section">
        {% include 'back_office/event/_form.html.twig' %}
    </section>
{% endblock %}
