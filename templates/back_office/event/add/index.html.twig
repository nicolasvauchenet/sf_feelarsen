{% extends 'back_office/_layout/_index.html.twig' %}

{% block title %}Nouvelle Date{% endblock %}

{% block body_class %}back-office{% endblock %}

{% block main %}
    <section class="app-section cover">
        {% if calendar.poster %}
            <img src="{{ asset('uploads/calendar/' ~ calendar.slug ~ '/' ~ calendar.poster) }}"
                 alt="{{ calendar.name }}"/>
        {% else %}
            <img src="{{ asset('uploads/settings/sitecover.jpg') }}"
                 alt="{{ calendar.name }}"/>
        {% endif %}
        <div class="content">
            <h1>{{ app_settingsService.settings.siteName }} : Nouvelle Date</h1>
        </div>
    </section>

    <section class="app-section">
        {% include 'back_office/event/_form.html.twig' %}
    </section>
{% endblock %}
