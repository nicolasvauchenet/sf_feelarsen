{% if error is defined and error %}
    <div class="app-alert danger" data-controller="alert" data-action="alert#close">
        {{ error.messageKey | trans(error.messageData, 'security') }}
    </div>
{% endif %}

{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="app-alert {{ label }}" data-controller="alert" data-action="alert#close">
            {{ message | raw }}
        </div>
    {% endfor %}
{% endfor %}
